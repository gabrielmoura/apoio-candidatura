<%- include('../../partials/header.ejs') %>

<div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            <%- include('../../partials/topbar.ejs') %>
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <form method="POST" action="/admin/processos/update">
                    <input type="hidden" class="form-control" name="id" id="id" value="<%= processo.id %>"></input>

                    <!-- Content Row -->
                    <div class="row">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-12 col-md-6 mb-4">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <div class="form-row">
                                        <div class="col-xl-1 col-md-6 mb-4">
                                            <small id="passwordHelpBlock" class="form-text text-muted">Data da
                                                Ligação</small>
                                            <input type="text" class="form-control form-control-sm date"
                                                   name="date_of_call" value="<%= processo.date_of_call %>"></input>
                                        </div>
                                        <div class="col-xl-1 col-md-6 mb-4">
                                            <small id="passwordHelpBlock" class="form-text text-muted">Hora</small>
                                            <input type="text" class="form-control form-control-sm time"
                                                   name="time" value="<%= processo.time %>"></input>
                                        </div>
                                        <div class="col-xl-1 col-md-6 mb-4">
                                            <small id="passwordHelpBlock" class="form-text text-muted">Data da
                                                Ligação</small>
                                            <input type="text" class="form-control form-control-sm date"
                                                   name="date_of_schedule" value="<%= processo.date_of_schedule %>"></input>
                                        </div>
                                        <div class="col-xl-1 col-md-6 mb-4">
                                            <small id="passwordHelpBlock" class="form-text text-muted">Data de
                                                Nascimento</small>
                                            <input type="text" class="form-control form-control-sm date"
                                                   name="date_of_birth" value="<%= processo.date_of_birth %>"></input>
                                        </div>
                                        <div class="col-xl-1 col-md-6 mb-4">
                                            <small id="passwordHelpBlock" class="form-text text-muted">CPF</small>
                                            <input class="form-control form-control-sm cpf" name="cpf"
                                                   value="<%= processo.cpf %>"></input>
                                        </div>

                                        <div class="col-xl-4 col-md-6 mb-4">
                                            <small id="passwordHelpBlock" class="form-text text-muted">Nome do
                                                Beneficiário</small>
                                            <input type="text" class="form-control form-control-sm"
                                                   name="name" value="<%= processo.name %>"></input>
                                        </div>

                                        <div class="col-xl-2 col-md-6 mb-4">
                                            <small id="passwordHelpBlock"
                                                   class="form-text text-muted">Telefones</small>
                                            <input type="text" class="form-control form-control-sm tel"
                                                   name="tell"
                                                   value="<%= processo.tell %>"></input>
                                        </div>

                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-xl-1 col-md-6 mb-4">
                                        <small id="passwordHelpBlock" class="form-text text-muted">Cep</small>
                                        <input type="text" maxlength="9"
                                               class="form-control form-control-sm cep"
                                               name="cep" id="cep" value="<%= processo.cep %>" size="10"
                                        ></input>
                                    </div>

                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <small id="passwordHelpBlock"
                                               class="form-text text-muted">Endereço</small>
                                        <input style="text-transform: uppercase;" id="Street"
                                               class="form-control form-control-sm" name="address"
                                               value="<%= processo.address %>"></input>

                                    </div>


                                </div>

                                <div class="form-row">
                                    <div class="col-xl-2 col-md-6 mb-4">
                                        <small id="passwordHelpBlock" class="form-text text-muted">Benefício
                                            Requerido</small>
                                        <select class="form-control form-control-sm" name="benefit">
                                            <option value=""></option>
                                            <option value="LOAS IDOSO">LOAS IDOSO</option>
                                            <option value="LOAS DEFICIENTE">LOAS DEFICIENTE</option>
                                            <option value="LOAS NIVER">LOAS NIVER</option>
                                            <option value="OUTROS">OUTROS</option>
                                        </select>
                                    </div>

                                    <div class="col-xl-2 col-md-6 mb-4">
                                        <small id="passwordHelpBlock"
                                               class="form-text text-muted">Indicação</small>
                                        <select class="form-control form-control-sm" name="indication">
                                            <option value="SBTIB">SBT-IB</option>
                                            <option value="AC">ANTÔNIO CARLOS</option>
                                            <option value="TUPI">TUPI</option>
                                            <option value="CIDINHA">CIDINHA</option>
                                            <option value="PA">PEDRO AUGUSTO</option>
                                            <option value="CM">CM</option>
                                            <option value="PANFLETO">PANFLETO</option>
                                            <option value="AMIGOVIZINHO">AMIGO/VIZINHO</option>
                                            <option value="HR">HR</option>
                                            <option value="IBT">IBT</option>
                                            <option value="GLOBO">GLOBO</option>
                                        </select>
                                    </div>

                                    <div class="col-xl-8 col-md-6 mb-4">
                                        <small id="passwordHelpBlock"
                                               class="form-text text-muted">Reagendamento</small>
                                        <input class="form-control form-control-sm" name="reschedule"
                                               value="<%= processo.reschedule %>"></input>
                                    </div>

                                    <div class="col-xl-12 col-md-6 mb-4">
                                        <small id="passwordHelpBlock" class="form-text text-muted">Observação
                                            Complementar</small>
                                        <textarea type="text"
                                                  class="p-3 mb-2 bg-light text-dark form-control form-control-sm"
                                                  name="informacaocomplementar" id="observation"
                                                  value="<%= processo.observation %>" rows="4" cols="66"></textarea>
                                    </div>


                                    <div class="col-xl-4 col-md-6 mb-4">
                                        <small id="passwordHelpBlock"
                                               class="form-text text-muted">status</small>
                                        <input class="form-control form-control-sm " name="status"
                                               value="<%= processo.status %>"></input>
                                    </div>

                                    <div class="col-xl-2 col-md-6 mb-4">
                                        <small id="passwordHelpBlock" class="form-text text-muted">Status Observação
                                            Entrada</small>
                                        <input class="form-control form-control-sm "
                                               name="status_of_observation"
                                               value="<%= processo.status_of_observation %>"></input>
                                    </div>

                                    <div class="col-xl-2 col-md-6 mb-4">
                                        <small id="passwordHelpBlock" class="form-text text-muted">STATUS (USO
                                            EXCLUSIVO DA 3232)</small>
                                        <input class="form-control form-control-sm " name="status_of_3232"
                                               value="<%= processo.status_of_3232 %>"></input>
                                    </div>

                                    <!--                                            <div class="col-xl-2 col-md-6 mb-4">-->
                                    <!--                                                <small id="passwordHelpBlock"-->
                                    <!--                                                       class="form-text text-muted">Situação</small>-->
                                    <!--                                                <select class="form-control form-control-sm" name="situacao">-->
                                    <!--                                                    <option value="<%= processo.id %>"></option>-->
                                    <!--                                                    <option value="ANALISE">ANÁLISE</option>-->
                                    <!--                                                    <option value="ANALISEPENDENCIA">ANÁLISE PENDÊNCIA</option>-->
                                    <!--                                                    <option value="CANCELADO">CANCELADO</option>-->
                                    <!--                                                    <option value="DEFERIDO">DEFERIDO</option>-->
                                    <!--                                                    <option value="INDEFERIDO">INDEFERIDO</option>-->
                                    <!--                                                    <option value="EXIGENCIA">EXIGÊNCIA</option>-->
                                    <!--                                                    <option value="FALECEU">FALECEU</option>-->
                                    <!--                                                    <option value="RECURSO">RECURSO</option>-->
                                    <!--                                                    <option value="OUTROS">OUTROS</option>-->
                                    <!--                                                </select>-->

                                    <!--                                            </div>-->


                                    <div class="col-xl-2 col-md-6 mb-4">
                                        <small id="passwordHelpBlock"
                                               class="form-text text-muted">Fonte\Origem</small>
                                        <input class="form-control form-control-sm" name="source"
                                               value="<%= processo.source %>"></input>
                                    </div>
                                    <div class="col-xl-2 col-md-6 mb-4">
                                        <small id="unidade" class="form-text text-muted">Unidade</small>
                                        <select class="form-control form-control-sm" name="unit">
                                            <option value=""></option>
                                            <option value="CENTRO">Centro</option>
                                            <option value="ALCANTARA">Alcântara</option>
                                            <option value="TAQUARA">Taquara</option>
                                            <option value="ANGRA">Angra</option>
                                            <option value="NILOPOLIS">Nilópolis</option>
                                        </select>
                                    </div>

                                    <div class="col-md-4 mb-3">
                                        <small id="apoio"
                                               class="form-text text-muted">Apoio</small>
                                        <select class="form-control" name="candidacy_support" id="apoio" autofocus>
                                            <option value=""></option>
                                            <option value="apoiosim">APOIO SIM</option>
                                            <option value="apoiotalvez">APOIO TALVEZ</option>
                                            <option value="apoionao">APOIO NÃO</option>
                                        </select>
                                    </div>


                                </div>


                                <div class="form-row">
                                    <div class="col-xl-12 col-md-6 mb-4">
                                        <small id="passwordHelpBlock" class="form-text text-muted">-</small>
                                        <button type="submit" class="btn btn-success btn-block">Cadastrar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                </form>

            </div>
        </div>
        <!-- Footer -->
        <footer>
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <div class="row">

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-6 col-md-6 mb-4">
                            <input type="button" value="Voltar" onClick="history.go(-1)"
                                   class="btn btn-Light btn-block"/>
                        </div>
                        <div class="col-xl-6 col-md-6 mb-4">
                            <input type="button" value="Avançar" onClick="history.go(+1)"
                                   class="btn btn-Light btn-block"/>
                        </div>
                    </div>
                </div>
        </footer>
    </div>
    <a class="scroll-to-top rounded" href="#page-top"><i class="fas fa-angle-up"></i></a>
</div>

