<%- include('../../partials/header.ejs') %>

<div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            <% include('../../partials/topbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="container">
                    <h2>Usuários</h2>
                    <a class="btn btn-success" href="/admin/users/create">Criar novo usuário</a>
                    <hr>
                    <table class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Função</th>
                            <th>Ação</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.email %></td>
                                <td><%= user.role %></td>
                                <td>
                                    <div class="d-inline">
                                        <a class="btn btn-primary" href="/admin/users/edit/<%= user.id %>">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </div>
                                    <div class="d-inline">
                                        <a class="btn btn-danger" onclick="banUser(<%= user.id %>);">
                                            <i class="fa fa-ban"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>

                </div>

            </div>

        </div>

        <script type="text/javascript">
            const banUser = id => {
                if (typeof axios != 'undefined') {
                    axios.post('/', {status: disabled, id})
                        .then(r => {
                            window.setTimeout(() => {
                                document.location.reload(true);
                            }, 1000);
                        })
                        .catch(e => {
                            console.log("Erro ao Desativar: " + e);
                        });
                }
                console.log("Necessário Axios para API: " + id);
            }
        </script>
    </div>
</div>

<% include('../../partials/logoutmodal.ejs') %>
<% include('../../partials/footer.ejs') %>
